{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "noImplicitAny": false,
    "strict": false, // 关闭 strict 模式
    "skipLibCheck": true, // 跳过检查引入的库文件
    "esModuleInterop": true, // 启用 CommonJS 模块的导入
    "allowJs": true, // 允许编译 JavaScript 文件
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "ayongUI": ["./src/ayongUI/dist/index.d.ts"]
    }
  },
  "include": [
    "components/**/*.tsx",
    "/**/*.ts",
    "types",
    "components/**/*.d.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
